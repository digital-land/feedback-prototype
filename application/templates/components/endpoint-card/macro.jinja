{% macro appEndpointCard(params={}) %}
  <article class="app-card app-card--endpoint">
    <{{ params.headingLevel | d('h3')}} class="app-card__title">{{ params.title }}</{{ params.headingLevel | d('h3')}}>
    <div class="app-card__body">
      {% if params.endpoint %}
        <div class="app-card__row">
          <p class="app-card__label">{{ params.endpoint.text | d('URL') }}</p>
          <p class="govuk-hint">{{ params.endpoint.hint | d('The web address data was collected from') }}</p>
          <code class="app-card__code">{{ params.endpoint.url | d('https://www.borchestercouncil.gov.uk/data/feed/example.json') }}</code>
        </div>
      {% endif %}
      {% if params.documentation %}
      <div class="app-card__row">
        <p class="app-card__label">{{ params.documentation.text | d('Documentation page') }}</p>
        <p class="govuk-hint">{{ params.documentation.hint | d('The web page we found the source URL on') }}</p>
        <p class="app-card__link">
          <a href="{{ params.documentation.url | d('#' )}}" class="govuk-link">{{ params.documentation.url | d('#') }}</a>
        </p>
      </div>
      {% endif %}
      <!-- @PaulSmith - rip this out once you've had a look -->
      {% if params.data %}
        <div class="app-card__row">
          <p class="app-card__label">{{ params.data.text | d('Data') }}</p>
          <p class="govuk-hint">{{ params.data.hint | d('The data generated from the source URL') }}</p>
          <p class="app-card__link">
            <a href="{{ params.data.url | d('#' )}}" class="govuk-link">{{ params.data.url | d('#') }}</a>
          </p>
        </div>
      {% endif %}
    </div>
  </article>
{% endmacro %}
